@page
@model TheMiniShop.Pages.IndexModel
@using TheMiniShop.Models

<div class="container my-5">
    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0 d-flex flex-column">
                    <!-- Product Image -->
                    <img src="@product.ImageUrl" class="img-fluid rounded" alt="@product.Name" style="object-fit: cover; height: 200px;">

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text fw-bold mb-2">R @product.Price</p>

                        <!-- View Details button -->
                        <a asp-page="/ProductDetails" asp-route-id="@product.Id" class="btn btn-outline-secondary mb-2 w-100">
                            View Details
                        </a>

                        <!-- Add to Cart Button -->
                        <form method="post" asp-page-handler="AddToCart" class="mt-auto">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-cart-plus me-1"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

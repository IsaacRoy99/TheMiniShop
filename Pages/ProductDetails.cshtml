@page "{id:int}"
@model TheMiniShop.Pages.ProductDetailsModel
@using TheMiniShop.Models

<div class="container my-5">
    @if (Model.Product != null)
    {
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 text-center">
                <img src="@Model.Product.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Product.Name" style="max-height:400px; object-fit:cover;">
            </div>
            <div class="col-12 col-md-6">
                <h2>@Model.Product.Name</h2>
                <p class="fw-bold">R @Model.Product.Price</p>
                <p>@Model.Product.Description</p>

                <form method="post" asp-page-handler="AddToCart">
                    <input type="hidden" name="id" value="@Model.Product.Id" />
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-cart-plus me-1"></i> Add to Cart
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger">Product not found.</p>
    }
</div>
